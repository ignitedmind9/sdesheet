#include <bits/stdc++.h> 

//dutch national flag algorithm
void sort012(int *arr, int n)
{
   int low=0;
   int mid=0;
   int high=n-1;
   while(mid<=high).   //very important mid<=high
   {
       if(arr[mid]==0)
       {
           swap(arr[mid],arr[low]);
           mid++;
           low++;
       }
       else if(arr[mid]==1)
           mid++;
       else if(arr[mid]==2)
       {
           swap(arr[mid],arr[high]);
           high--;
       }
   }
    
}
